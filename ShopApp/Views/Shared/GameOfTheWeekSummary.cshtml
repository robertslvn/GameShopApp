@model Game

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
       
        <img class="smallgameimages" src="@Model.ImageThumbnailUrl" alt="">
        <div class="caption">
            
            <h3>
                <a asp-controller="Game"
                   asp-action="Details"
                   asp-route-id="@Model.GameId">@Model.Name
            </h3>
            <p>@Model.ShortDescription</p>
            <h3 class="price">@Model.Price.ToString("c")</h3></a>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-gameId="@Model.GameId">Add to cart</a>
            </p>
        </div>
    </div>
</div>
